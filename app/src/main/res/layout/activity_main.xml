<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.munia.mapdirection.MainActivity">

   <FrameLayout
       android:id="@+id/mapContainer"
       android:layout_width="match_parent"
       android:layout_height="match_parent"/>

       <Button
           android:id="@+id/btnInstruction"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="show instructions"
           android:onClick="showInstructions"
           android:enabled="false" />
       <Button
           android:id="@+id/btnNextRoute"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Next Route"
           android:onClick="nextRoute"
           android:enabled="false"
           android:layout_alignParentRight="true" />
</RelativeLayout>
